<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppUsers.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20" Padding="20">
        
        <Label Text="Login" FontSize="Large" HorizontalTextAlignment="Center" />

        <StackLayout Spacing="10">
            <Label Text="Username" HorizontalOptions="Start" />
            <Entry x:Name="txtUsername" Placeholder="Username" />
        </StackLayout>

        <StackLayout Spacing="10">
            <Label Text="Password" HorizontalOptions="Start" />
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>
        </StackLayout>

        <Button x:Name="cmdLogin" Text="Login" Clicked="cmdLogin_Clicked" HorizontalOptions="FillAndExpand" BackgroundColor="DodgerBlue" TextColor="White" Margin="0,20,0,0" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Don't have an account? " />
            <Button x:Name="cmdRegister" Text="Register" Clicked="cmdRegister_Clicked" BackgroundColor="Transparent" TextColor="DodgerBlue" />
        </StackLayout>

    </StackLayout>

</ContentPage>
