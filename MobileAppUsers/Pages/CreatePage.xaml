<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppUsers.Pages.CreatePage"
             Title="CreatePage">
    <VerticalStackLayout>
        <Button x:Name="btnBack" Text="Back" Clicked="btnBack_Clicked" />

        <Label Text="Create" FontSize="Medium" HorizontalOptions="Center" />
        <Label Text="Username" />
        <Entry x:Name="txtUsername" Placeholder="Username" />
        <Label Text="Password" />
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>

        <Button x:Name="btnCreate" Text="Create" Clicked="btnCreate_Clicked"/>
    </VerticalStackLayout>
</ContentPage>