<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppUsers.Pages.ListUsers"
             Title="ListUsers">
    <VerticalStackLayout>
        <Button x:Name="btnBack" Text="Back" Clicked="btnBack_Clicked" />

        <Label Text="List Users" FontSize="Medium" HorizontalOptions="Center" />

        <StackLayout x:Name="UsersStackLayout">
            <!-- Users will be added here dynamically -->
        </StackLayout>
        
        <Button x:Name="btnCreate" Text="Go to Create" Clicked="btnCreate_Clicked"/>
    </VerticalStackLayout>
</ContentPage>