<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppUsers.Pages.SignUp"
             Title="SignUp">
    <ContentPage.Resources>
       
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="Margin" Value="0,5,0,10" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="BackgroundColor" Value="DodgerBlue" />
            <Setter Property="TextColor" Value="White" />
        </Style>
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Button x:Name="cmdBack" Text="Back" Clicked="cmdBack_Clicked" />

        <Label Text="Sign Up" HorizontalOptions="Center" />

        <Label Text="Username" />
        <Entry x:Name="txtUsername" Placeholder="Username" />

        <Label Text="Password" />
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>

        <Button x:Name="cmdSignUp" Text="Sign Up" Clicked="cmdSignUp_Clicked"/>
    </StackLayout>
</ContentPage>
