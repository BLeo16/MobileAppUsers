<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppUsers.Pages.SignUp"
             Title="SignUp">
    <StackLayout>

        <Button x:Name="cmdBack" Text="Back" Clicked="cmdBack_Clicked" />
        
        <Label Text="Sign Up" FontSize="Medium" HorizontalOptions="Center" />
        <Label Text="Username" />
        <Entry x:Name="txtUsername" Placeholder="Username" />
        <Label Text="Password" />
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>
        
        <Button x:Name="cmdSignUp" Text="Sign Up" Clicked="cmdSignUp_Clicked"/>

    </StackLayout>
</ContentPage>